&general
  saveMatricesAndVectorsInBinary = .t.
/

&geometryParameters
  geometryScheme = 4  ! Simplified W7-X model
/

&speciesParameters
!  Zs = 1 -1
!  mHats = 1 0.000545509d+0
!  nHats = 1.0d+0 1.0d+0
!  THats = 1.0d+0 1.0d+0
